    "@commitlint/config-conventional": "8.3.4",
    "commitizen": "4.1.2",
    "@types/jest": "25.2.3",
    "cross-env": "7.0.2",
    "dependency-cruiser": "9.8.1",
    "sort-package-json": "1.44.0"
  }
}
